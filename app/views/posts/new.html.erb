<h3> Post Form </h3>

<%= form_for(@post) do |f| %>
    <%= f.label 'Post Title:' %><br>
    <%= f.text_field :title %><br>

    <%= f.label 'Content:' %><br>
    <%= f.text_field :content %><br>

    <%= f.label 'Summary:' %><br>
    <%= f.text_field :summary %><br>

    <%= f.label 'Category:' %><br>
    <%= f.text_field :category %><br>

    <%= f.submit %>
<% end %> 